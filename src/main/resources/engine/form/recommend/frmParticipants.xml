<?xml version="1.0" encoding="UTF-8"?>
<tsoftware xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../componentConfig.xsd">
	<ui_layer>
		<ui name="frmParticipants" title="参会人员">
			<!-- 参会人员 -->
			<panel name="pForm" title="参会人员表" object="participants"
				type="Group">

                <control name="id" title="参会人员编号" property="id" type="Hidden"
					edit="Y" required="N" format="" width="1" height="" column=""></control>
				<control name="empid" title="参会人员编号" property="empId" type="Hidden"
					edit="Y" required="N" format="" width="1" height="" column=""></control>
				<control name="empName" title="参会人员" property="empName"
					type="PopupBox" edit="Y" required="" format="" width="1" height=""
					column="2" />
			</panel>

			<!-- 控件 -->
			<panel name="pToolbar" title="控件" object="" type="Toolbar">
				<control name="ctlSave" title="确认" property="" type="Button"></control>
				<control name="ctlCancle" title="取消" property="" type="Button"></control>
			</panel>

			<!-- 逻辑加载 -->
			<flow trigger="" event="OnLoad" filter="">
				<procedure name="jclear" logic="Clear" ifyes="jBranch"
					ifno="">
					<param name="Out" value="pForm"></param>
				</procedure>
				<procedure name="jBranch" logic="Branch" ifyes=""
					ifno="j1">
					<param name="In"
						value="getStorage('frmParticipants_EditMode')=='Add'"></param>
				</procedure>
				<procedure name="j1" server="" logic="DecodeId" ifyes="qid"
					ifno="">
					<param name="Out" value="pForm.id" />
				</procedure>
				<procedure name="qid" logic="QueryById" ifyes=""
					ifno="">
					<param name="In" value="pForm"></param>
					<param name="Out" value="pForm" />
					<param name="Sql" value="saleQuery" />
				</procedure>
			</flow>

			<!-- 参会人员名称 -->
			<flow trigger="pForm.empName" event="OnClick"
				filter="">
				<procedure name="Querypresalses" logic="Find" ifyes=""
					ifno="">
					<param name="In" value="pForm.id"></param>
					<param name="Out" value="pForm"></param>
					<param name="Sql" value="participants"></param>
					<param name="Title" value="参会人员名称选择" />
					<param name="Options" value="$RESET,重置" />
					<param name="Columns" value="id,参会人员编号,empid|name,参会人员名称,empName"></param>
				</procedure>
			</flow>
			<!-- 确认 -->
			<flow trigger="pToolbar.ctlSave" event="OnClick" filter="">
				<procedure name="jsave" logic="Save" ifyes="jclose" ifno="">
					<param name="In" value="pForm"></param>
					<param name="Msg" value="信息保存成功"></param>
					<param name="Plugin" value=""></param>
				</procedure>
				<procedure name="jclose" logic="Close">
					<param name="Refresh" value="true"></param>
				</procedure>
			</flow>

			<!-- 取消 -->
			<flow trigger="pToolbar.ctlCancle" event="OnClick" filter="">
				<procedure name="jsclose" server="" logic="Close" ifyes=""
					ifno="">
					<param name="Refresh" value="false"></param>
				</procedure>
			</flow>


			<!-- 布局 -->
			<layout>
				<region location="Center" scale="">
					<subregion panel="pForm" location="Center" scale=""></subregion>
				</region>
				<region location="South" scale="">
					<subregion panel="pToolbar" location="South" scale=""></subregion>
				</region>
			</layout>
		</ui>
	</ui_layer>
</tsoftware> 